{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": "off",
    "unknown-at-rule": "off",
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}