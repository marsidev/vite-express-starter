{
  "version": 2,
  "name": "vite-express-starter",
  "builds": [
    {
      "src": "/packages/server/src/index.js",
      "use": "@vercel/node@latest",
      "config": {
        "distDir": "dist",
        "includeFiles": [
          "/packages/server/src/**",
          "/packages/server/node_modules/**"
        ]
      }
    },
    {
      "src": "/packages/client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/packages/server/src/index.js" },
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/packages/client/dist/assets/$1" },
    { "src": "/(.*).(js|css|ico|svg)", "dest": "/packages/client/dist/$1.$2" },
    { "src": "/", "dest": "/packages/client/dist/index.html" },
    { "src": "/(.*)", "dest": "/packages/client/dist/$1" }
  ]
}
