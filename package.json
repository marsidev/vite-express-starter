{
  "private": true,
  "author": {
    "name": "Luis Marsiglia",
    "email": "marsiglia.business@gmail.com"
  },
  "name": "vite-express-starter",
  "description": "This is a React fullstack starter project which uses Vite and Express as the client and server respectively. Also uses pnpm as package manager.",
  "version": "0.0.1",
  "license": "ISC",
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "keywords": [
    "express",
    "vite",
    "vite-express",
    "vite-react",
    "react",
    "chakra-ui",
    "template"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm --filter client build",
    "start": "pnpm --filter server start",
    "dev": "pnpm run -r --workspace-concurrency 2 --filter server --filter client dev",
    "start:all": "pnpm build && pnpm start",
    "heroku-prebuild": "npm install -g pnpm && pnpm --version",
    "heroku-postbuild": "pnpm install"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.2.0"
  },
  "packageManager": "pnpm@7.0.0-rc.2",
  "pnpm": {
    "overrides": {
      "client": "workspace:*",
      "server": "workspace:*"
    }
  }
}
